rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isGuide() {
      return isAuthenticated() && getUserRole() == 'guide';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can only create their own document with required fields
      allow create: if isOwner(userId) && 
        request.resource.data.keys().hasAll(['email', 'role', 'createdAt']) &&
        request.resource.data.role == 'tourist';
      
      // Users can update their own document but can't change role
      allow update: if isOwner(userId) &&
        request.resource.data.role == resource.data.role;
      
      // Only admins can delete user documents
      allow delete: if isAdmin();
    }
    
    // ============================================
    // LOCATIONS COLLECTION
    // ============================================
    
    match /locations/{locationId} {
      // Public read - anyone can browse locations (core UX requirement)
      allow read: if true;
      
      // Only admins can create/update/delete locations
      allow write: if isAdmin();
      
      // Reviews subcollection
      match /reviews/{reviewId} {
        // Anyone can read reviews
        allow read: if true;
        
        // Authenticated users can create reviews (must be their own userId)
        allow create: if isAuthenticated() &&
          request.resource.data.userId == request.auth.uid;
        
        // Users can update/delete their own reviews, admins can moderate
        allow update, delete: if isOwner(resource.data.userId) || isAdmin();
      }
    }
    
    // ============================================
    // TOURS COLLECTION
    // ============================================
    
    match /tours/{tourId} {
      // Public read for approved tours, guides see own drafts, admins see all
      allow read: if resource.data.status == 'approved' || 
        isOwner(resource.data.guideId) || isAdmin();
      
      // Guides can create tours (must set themselves as guide)
      allow create: if isGuide() &&
        request.resource.data.guideId == request.auth.uid;
      
      // Guides can update own tours, admins can update any
      allow update: if isOwner(resource.data.guideId) || isAdmin();
      
      // Only admins can delete tours
      allow delete: if isAdmin();
    }
    
    // ============================================
    // ARTICLES COLLECTION
    // ============================================
    
    match /articles/{articleId} {
      // Public read for published articles, admins see all
      allow read: if resource.data.status == 'published' || isAdmin();
      
      // Only admins can write articles
      allow write: if isAdmin();
    }
    
    // ============================================
    // GUIDE INQUIRIES COLLECTION
    // ============================================
    
    match /guide_inquiries/{inquiryId} {
      // Guides can read inquiries addressed to them, tourists can read own
      allow read: if isOwner(resource.data.touristId) || 
        isOwner(resource.data.guideId) || isAdmin();
      
      // Authenticated users can create inquiries
      allow create: if isAuthenticated() &&
        request.resource.data.touristId == request.auth.uid;
      
      // Guides can update to respond, tourists can update to cancel
      allow update: if isOwner(resource.data.touristId) || 
        isOwner(resource.data.guideId) || isAdmin();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
  }
}
